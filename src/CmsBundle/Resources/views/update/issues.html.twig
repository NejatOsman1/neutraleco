{% trans_default_domain 'cms' %}

<div class="issues-form">
	<div class="row">
		{# <div class="col s12 ">
			<h1 class="left">{{'Issues'|trans}}</h1>
			<a href="{{path('admin_feedback')}}" class="btn right popup" style="margin-right: 0;">Feedback</a>
		</div> #}

		<nav class="tabbar">
			<ul class="tabs tabs-transparent">
				<li class="tab"><a class="active" href="#open">{{'Openstaand'|trans}} ({{issues.opened|length}})</a></li>
				<li class="tab"><a href="#closed">{{'Gesloten'|trans}} ({{issues.closed|length}})</a></li>

				<li class="right"><a href="{{path('admin_feedback')}}" class="btn right popup" style="margin-right: 6px;">{{ 'Feedback' | trans }}</a></li>
			</ul>
		</nav>

		<div id="open" class="t-content">
			<div class="col s12 ">
				<table class="striped highlight bordered">
					<thead>
						<tr>
							<th style="width: 200px;">{{ 'Datum' | trans }}</th>
							<th>{{ 'Issue' | trans }}</th>
						</tr>
					</thead>
					<tbody>
						{% for issue in issues.opened %}
							<tr>
								<td>{{issue.created_at|date('d-m-Y H:i:s')}}</td>
								<td>{{issue.title}}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>

		<div id="closed" class="t-content">
			<div class="col s12 ">
				<table class="striped highlight bordered">
					<thead>
						<tr>
							<th style="width: 200px;">{{ 'Datum' | trans }}</th>
							<th>{{ 'Issue' | trans }}</th>
						</tr>
					</thead>
					<tbody>
						{% for issue in issues.closed %}
							<tr>
								<td>{{issue.created_at|date('d-m-Y H:i:s')}}</td>
								<td>{{issue.title}}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<script>
$( function(){
	$('ul.tabs').tabs();
	var MyCpop = $('.issues-form').cpop( {
    	buttonAction: {
    		close: 	function( el ){ cpop.close(); },
    		// submit: function( el ){ cpop.postAjax(); }
    	},
    	buttonLabel: {
			close: 	'{{ 'Sluiten' | trans }}',
			// submit: 'Opslaan/Wijzigen'
    	}
    } );
});
</script>