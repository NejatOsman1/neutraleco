{% extends '@Cms/base.html.twig' %}
{% trans_default_domain 'cms' %}

{% block body %}
	<div class="row">
		<div class="col s4">
			<div class="card">
				<div class="card-content center-align">
					<div class="card-title">{{'Actief'|trans}}</div>
					{{enabled}}
				</div>
			</div>
		</div>
		<div class="col s4">
			<div class="card">
				<div class="card-content center-align">
					<div class="card-title">{{ 'UP' | trans }}</div>
					{{up}}
				</div>
			</div>
		</div>
		<div class="col s4">
			<div class="card">
				<div class="card-content center-align">
					<div class="card-title">{{ 'DOWN' | trans }}</div>
					{{down}}
				</div>
			</div>
		</div>

		<div class="col s12">
			<div class="card">
				<div class="card-content">
					<div class="card-title">{{'Actuele status'|trans}}</div>
					<table>
						<thead>
							<tr>
								<th style="width:150px;">{{ 'Status' | trans }}</th>
								<th class="center-align" style="width:100px;">{{ 'HTTP code' | trans }}</th>
								<th>{{ 'Domein' | trans }}</th>
								<th class="center-align" style="width:110px;">{{ 'Contacten' | trans }}</th>
								<th class="center-align" style="width:110px;">{{ 'Monitor actief' | trans }}</th>
								<th class="center-align" style="width:200px;">{{ 'Laatste check' | trans }}</th>
							</tr>
						</thead>
						<tbody>
							{% for Client in clients %}
								<tr>
									<td>
										<span class="monitor-status monitor-{{Client.status|lower}}">{{Client.status|upper}}</span>
									</td>
									<td class="center-align">{{Client.monitorStatus}}</td>
									<td>{{Client.domain}}</td>
									<td class="center-align"><a href="#">{{Client.monitorEmails|length}}</a></td>
									<td class="center-align"><i class="material-icons">{{Client.monitor ? 'check_circle' : 'remove_circle_outline'}}</i></td>
									<td class="center-align">{{Client.monitorDate|date('d-m-Y H:i:s')}}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
