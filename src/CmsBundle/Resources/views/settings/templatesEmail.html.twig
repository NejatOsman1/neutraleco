{% extends '@Cms/base.html.twig' %}
{% trans_default_domain 'cms' %}

{% block body %}
	<div class="page-content">
	    <div class="panel">
			<table class="tablesorter table table-striped table-hover table-condensed">
				<thead>
					<tr>
						<th>{{'E-mail template'|trans}}</th>
					</tr>
				</thead>
				<tbody>
					{% for template in templates %}
						<tr>
							<td>
								<a href="{{path('admin_templates_email', {template: template})}}">{{ template }}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
	    </div>
    </div>
{% endblock %}
