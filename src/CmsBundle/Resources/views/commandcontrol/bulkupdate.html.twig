{% if stats is defined %}
	<div class="row">
		<div class="col s12">
			<div class="card">
				<div class="card-content">
					<table>
						<thead>
							<tr>
								<th>{{ 'Domein' | trans }}</th>
								<th>{{ 'Status' | trans }}</th>
							</tr>
						</thead>
						<tbody>
							{% for domain,status in stats %}
								<tr>
									<td>
										{{domain}}
									</td>
									<td>
										{{status ? ('SUCCESVOL' |trans) : ('MISLUKT' | trans)}}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% else %}
	<form method="post">
		<div class="row">
			<div class="col s12">
				<div class="card">
					<div class="card-content">
						<strong>{{ 'Geselecteerde sites:' | trans }}</strong>
						<ul style="margin-bottom: 0;">
							<li style="list-style: disc; margin-left: 18px;">{{clientlist|join('</li><li>')}}</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col s12">
				<div class="card">
					<div class="card-content">
						<div class="card-title">{{'Selecteer een versie'|trans}}</div>
						<div class="input-field ">
							<select id="form_robots" name="version">
								{% for i,version in version_list %}
									<option value="{{version.name}}">{{version.name}}</option>
								{% endfor %}
							</select>
							<label for="form_robots" class="required">{{ 'Versie' | trans }}</label>
						</div>

						<div class="input-field">
							<input id="email" type="email" name="email" class="validate" placeholder="{{Settings.adminEmail}}" />
							<label for="email">{{ 'Notificatie e-mailadres (optioneel)' | trans }}</label>
						</div>
					</div>
				</div>
			</div>
		</div>

		<input type="hidden" name="clientlist" value="{{clientids|join(',')}}" />
		<div id="popup-footer">
			<button type="submit" class="btn green">{{ 'Updaten' | trans }}</button>
		</div>
	</form>
{% endif %}