<div class="row">
	<div class="col s12">

		{% for mSettings in multisite %}
			{% if mSettings != Settings %}
			<strong>{{mSettings.label}}</strong>
			{% for Page in mSettings.topLevelPages %}
				<label for="p-{{Page.id}}" class="form-label">{{Page.label}}</label>
				<input type="checkbox" name="pages[]" id="p-{{Page.id}}" value="{{Page.id}}" class="form-control" />
			{% endfor %}
			{% endif %}
		{% endfor %}

	</div>
	<div class="col s12">

		<label for="include-childs" class="form-label">{{ "Onderliggende pagina's meenemen" | trans }}</label>
		<input type="checkbox" name="include-childs" id="include-childs" value="1" class="form-control" />

		<label class="form-label">{{ 'Layout wijzigen' | trans }}</label>
		<select name="layout" class="form-select">
			<option value="">- {{ 'Niet wijzigen' | trans }} -</option>
			{% for layout in layouts %}
				<option value="{{layout}}">{{layout}}</option>
			{% endfor %}
		</select>

	</div>
</div>

<div class="modal-footer">
	<button type="submit" class="btn">{{ 'Importeren' | trans }}</button>
	<button type="button" class="btn-flat" onclick="cpop.close();">{{ 'Sluiten' | trans }}</button>
</div>
