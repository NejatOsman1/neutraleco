			<form action="{{ path("admin_login_check") }}" method="post">
				<div class="card">
					<div class="card-body">
						<h5>{{ 'Ik heb al een account' | trans }}</h5>

						{% if error is defined and error is not empty %}
						    <div class="alert error rounded" style="color: red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if hasLoginInvalidRoles is defined and hasLoginInvalidRoles is not empty %}
						    <div class="alert error rounded" style="color: red;">{{'U bent ingelogd maar hebt niet de juiste rechten om deze pagina te kunnen bekijken.'|trans}}</div>
						{% endif %}


						<div class="form-group">
							<label for="_username">{{'Gebruikersnaam'|trans}}</label>
							<input autocomplete="off" type="text"  class="form-control" id="_username" name="_username" value="{{ last_username is defined ? last_username : '' }}">
						</div>

						<div class="form-group">
							<label for="_password">{{'Wachtwoord'|trans}}</label>
							<input autocomplete="off" type="password"  class="form-control" id="_password" name="_password">
						</div>

						<div class="form-check">
							<input type="checkbox" name="_remember_me" class="form-check-input" id="remember">
							<label class="form-check-label" for="remember">{{'Wachtwoord onthouden'|trans}}</label>
						</div>

						<input type="hidden" name="_target_path" value="{{app.request.attributes.get('_route')}}{{loginUri is defined ? loginUri : ''}}" />
						<input type="hidden" name="_failure_path" value="{{app.request.attributes.get('_route')}}" />

						<button type="submit" name="login" class="btn btn-primary"><i class="fa fa-lock"></i> {{'Inloggen'|trans}}</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</section>