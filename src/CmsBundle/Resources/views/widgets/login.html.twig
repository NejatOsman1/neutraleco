{% trans_default_domain 'cms' %}

{% if file_exists('../templates/override/cms/login.html.twig') %}
    {% include 'override/cms/login.html.twig' %}
{% else %}
	{% if app.user %}
		{{'Je bent succesvol ingelogd, je wordt doorgestuurd.'|trans({}, 'cms', app.request.locale)}}
		<meta http-equiv="refresh" content="1; url={{url}}" />
	{% else %}
		<form method="post">
			<div class="form-group">
				<label for="_username">{{'Gebruikersnaam'|trans({}, 'cms', app.request.locale)}}</label>
				<input autocomplete="off" type="text"  class="form-control" id="_username" name="_username" value="">
			</div>
			<div class="form-group">
				<label for="_password">{{'Wachtwoord'|trans({}, 'cms', app.request.locale)}}</label>
				<input autocomplete="off" type="password"  class="form-control" id="_password" name="_password">
			</div>
			<div class="form-check">
				<input type="checkbox" name="_remember_me" class="form-check-input" id="remember">
				<label class="form-check-label" for="remember">{{'Wachtwoord onthouden'|trans({}, 'cms', app.request.locale)}}</label>
			</div>
			{% if Settings.hasGoogleRecaptcha() %}
        <div class="recaptcha">
          {{ Settings.getGoogleRecaptchaWidget() | raw }}
        </div>
      {% endif %}
			<button class="btn" type="submit" name="login">{{'Inloggen'|trans({}, 'cms', app.request.locale)}}</button>
		</form>
	{% endif %}
{% endif %}
