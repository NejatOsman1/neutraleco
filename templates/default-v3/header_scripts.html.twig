{# check if scrollmagic is needed #}
{% set scrollmagic = false %}
{% for wrapper in Page.blocks %}
	{% if wrapper.templatekey == 'framework_scrollmagic' or wrapper.templatekey == 'framework_content_parallax' %}
		{% set scrollmagic = true %}
	{% endif %}
{% endfor %}

{# Scrollmagic 2.0.8 #}
{% if scrollmagic %}
	{# <script defer src="/default-v3/js/ScrollMagic.min.js"></script> #}
	<script defer src="/default-v3/js/gsap.min.js"></script>
	<script defer src="/default-v3/js/animation.gsap.min.js"></script>
	{#<script defer src="/default-v3/js/debug.addIndicators.min.js"></script>#}
{% endif %}

