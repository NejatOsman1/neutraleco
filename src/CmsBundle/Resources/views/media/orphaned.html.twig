{% extends '@Cms/base.html.twig' %}
{% trans_default_domain 'cms' %}

{% block body %}
<div class="card">
	<div class="card-content">
		<table class="striped">
			<thead>
				<tr>
					<th>{{media|length}} {{ 'afbeeldingen' | trans }}</th>
					<th style="100px;">{{ 'Breedte (px)' | trans }}</th>
					<th style="100px;">{{ 'Hoogte (px)' | trans }}</th>
					<th style="200px;">{{ 'Datum' | trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for m in media %}
					<tr>
						<td><a href="{{asset('uploads/images/' ~ m.path)}}" target="_blank">{{m.label}}</a></td>
						<td>{{m.width}}</td>
						<td>{{m.height}}</td>
						<td>{{m.dateAdd|date('d-m-Y H:i:s')}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>

{% endblock %}