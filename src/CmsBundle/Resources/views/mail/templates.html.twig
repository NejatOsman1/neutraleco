{% extends '@Cms/base.html.twig' %}
{% trans_default_domain 'cms' %}

{% block body %}
	<div class="card">
		<div class="card-content">
			<span class="card-title">{{ 'E-mail templates' | trans }}</span>
			{% if templates %}
				<table class="bordered striped highlight responsive-table">
					<thead>
						<tr>
							<th>{{ 'Template' | trans }}</th>
							<th class="right-align" style="width:100px;">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						{% for MailTemplate in templates %}
							<tr>
								<td>
									{{ MailTemplate.label }}
								</td>
								<td class="right-align">
									<a class="tooltipped" data-position="top" data-delay="300" data-tooltip="{{ 'E-mail wijzigen' | trans }}" href="{{ path('admin_mail_templates_edit',{'id': MailTemplate.id}) }}"><i class="material-icons">mode_edit</i></a>
									{# <a class="tt popup" data-info="E-mail preview" href="{{ path('admin_mail_preview',{'id': MailTemplate.id}) }}"><i class="material-icons">search</i></a> #}
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% else %}
				<div class="center-align">{{ 'Er zijn geen templates ingesteld' | trans }}</div>
			{% endif %}
		</div>
    </div>

	<div class="btn-bar">
		<div class="right">
			<a href="{{path('admin_mail_templates_edit')}}" class="btn waves-effect waves-dark"><i class="material-icons left">add</i>{{'Template toevoegen'|trans}}</a>
		</div>
	</div>
{% endblock %}
