{% block form_errors %}
    {% apply spaceless %}
        {% if errors|length > 0 %}
        	<div class="alert error">
		        <ul>
		            {% for error in errors %}
		                <li>{{ error.message }}</li>
		            {% endfor %}
		        </ul>
	        </div>
        {% endif %}
    {% endapply %}
{% endblock form_errors %}